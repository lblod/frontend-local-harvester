<AuModalContainer />

<AuMainHeader
  @brandLink="https://www.vlaanderen.be"
  @homeRoute="index"
  @appTitle="Local Harvester"
/>

<main id="main" class="au-c-main-container">
  <div
    class="au-c-main-container__content au-c-main-container__content--scroll"
    id="content"
  >
    <div>{{outlet}}</div>
    <AuMainFooter>
      <AuHeading @level="3" @skin="4">
        Local Harvester is een applicatie van de Vlaamse overheid
      </AuHeading>
      <AuContent @skin="small">
        <p>Uitgegeven door
          <a
            class="au-c-link"
            href="https://www.vlaanderen.be/organisaties/administratieve-diensten-van-de-vlaamse-overheid/beleidsdomein-kanselarij-en-bestuur/agentschap-binnenlands-bestuur"
          >Agentschap Binnenlands Bestuur</a></p>
        <ul class="au-c-list-horizontal">
          <li class="au-c-list-horizontal__item">
            <AuLink
              @route="legaal.disclaimer"
              @skin="secondary"
            >Disclaimer</AuLink>
          </li>
          <li class="au-c-list-horizontal__item">
            <AuLink
              @route="legaal.cookieverklaring"
              @skin="secondary"
            >Cookieverklaring</AuLink>
          </li>
        </ul>
      </AuContent>
    </AuMainFooter>
  </div>
</main>